type User {
  id: ID! @id
  username: String! @unique
  name: String
  email: String
  password: String!
  vacations: [Vacation!]!
}

type Vacation {
  id: ID! @id
  title: String!
  startDate: String!
  endDate: String!
  events: [Event!]! 
  traveler: User @relation(link: INLINE)
}

type Event {
  id: ID! @id
  date: String!
  startTime: String
  endTime: String
  title: String!
  description: String
  trip: Vacation @relation(link: INLINE)
}